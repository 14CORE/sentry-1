import cv2

camera_port = 0
ramp_frames = 30
camera = cv2.VideoCapture(camera_port)
camera.set(3,1280)
camera.set(4,1024)

def detect():
    cascade = cv2.CascadeClassifier("haarcascade_frontalface_alt.xml")
    rects = cascade.detectMultiScale(camera.read(), 1.3, 4, cv2.cv.CV_HAAR_SCALE_IMAGE, (20,20))
    if len(rects) == 0:
        return [], img
    rects[:, 2:] += rects[:, :2]
    return rects, img

def box(rects, img):
    for x1, y1, x2, y2 in rects:
        cv2.rectangle(img, (x1, y1), (x2, y2), (127, 255, 0), 2)
    cv2.imwrite('detected.jpg', img);

rects, img = detect()
box(rects, img)


for i in xrange(ramp_frames):
    temp = get_image()
print("Taking image...")
camera_capture = get_image()
cv2.imwrite("detected", camera_capture)

